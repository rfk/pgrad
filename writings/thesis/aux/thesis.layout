#% Do not delete the line below; configure depends on this
#  \DeclareLaTeXClass[book]{book (thesis)}
#
# This is a LyX layout file for my thesis.  It provides some default
# theorem-style environments, and enables advanced citation options.

Format 4
Input book.layout

# We use theapa, actually, and emulate natbib's command set.
# This enables advanced styling options in the citation dialog.
Provides natbib 1

Preamble
  \usepackage{amsmath}
  \usepackage{amsfonts}
  \usepackage{amsthm}
  \usepackage[numbers]{natbib}
EndPreamble

# Template for theorem-numbered styles
Style TheoremTemplate
  Margin		First_Dynamic
  LatexType		Environment
  LabelSep		M
  ParIndent		MM
  ParSep		0.4
  Align			Block
  AlignPossible		Block, Left
  LabelType		Static
  LabelFont
    Shape		Italic
  EndFont
End

Style Proof
  CopyStyle		TheoremTemplate
  LatexName		proof
  LabelString		"Proof:"
  EndLabelType          Filled_Box
End

Style ProofSketch
  CopyStyle		Proof
  LabelString		"Proof Sketch:"
  LatexName		proofsketch
  #Preamble
  #  \newenvironment{proofsketch}{\begin{proof}[Proof Sketch]}{\end{proof}}
  #EndPreamble
End

Style Theorem
  CopyStyle		TheoremTemplate
  LatexName		thm
  LabelString		"Theorem #:"
  #Preamble
  #  \newtheorem{thm}{Theorem}
  #EndPreamble
End  

Style TheoremExt
  CopyStyle		TheoremTemplate
  LatexName		thmext
  LabelType             Manual
  LabelString		"Theorem #:"
  LabelFont
    Series              Bold
  EndFont
  #Preamble
  #  \newtheoremstyle{thmext}{\topsep}{\topsep}{\itshape}{}{\bfseries}{.}{ }{\thmname{#1}\thmnote{ #3}}
  #  \theoremstyle{thmext}
  #  \newtheorem*{thmext}{Theorem}
  #  \theoremstyle{plain}
  #EndPreamble
End

Style Lemma
  CopyStyle		TheoremTemplate
  LatexName		lemma
  LabelString		"Lemma #:"
  #Preamble
  #  \newtheorem{lemma}{Lemma}
  #EndPreamble
End  

Style LemmaExt
  CopyStyle		TheoremTemplate
  LatexName		lemmaext
  LabelType             Manual
  LabelString		"Lemma #:"
  LabelFont
    Series              Bold
  EndFont
  #Preamble
  #  \theoremstyle{thmext}
  #  \newtheorem*{lemmaext}{Lemma}
  #  \theoremstyle{plain}
  #EndPreamble
  DependsOn		TheoremExt
End

Style Proposition
  CopyStyle		TheoremTemplate
  LatexName		prop
  LabelString		"Proposition #:"
  #Preamble
  #  \newtheorem{prop}{Proposition}
  #EndPreamble
End  

Style Example
  CopyStyle		TheoremTemplate
  LatexName		example
  LabelString		"Example #:"
  #Preamble
  #  \newtheorem{example}{Example}
  #EndPreamble
End  

Style Definition
  CopyStyle		TheoremTemplate
  LatexName		defn
  LabelString		"Definition #:"
  #Preamble
  #  \newtheorem{defn}{Definition}
  #EndPreamble
End

Style DefinitionLbld
  CopyStyle		TheoremTemplate
  LatexName		defnL
  LabelType		Manual
  LabelString		"Definition #:"
  LabelFont
    Series		Bold
  EndFont
  #Preamble
  #  \newtheorem{defnL}[defn]{Definition}
  #EndPreamble
  DependsOn		Definition
End


NoStyle			TheoremTemplate
NoStyle                 Part
NoStyle                 Part*
NoStyle                 Subparagraph
NoStyle                 Subparagraph*

